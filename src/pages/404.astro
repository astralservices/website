---
import Layout from "../components/Layout.astro";
---

<Layout>
  <div class="px-16 pt-12 pb-6 md:px-48 md:pt-48 md:pb-36">
    <div class="space-y-6">
      <h1 class="grid grid-cols-1">
        <span class="text-4xl text-white lowercase md:text-7xl font-black">
          404
        </span>
      </h1>
      <p class="text-xl text-white font-bold">Page not found</p>
      <div>
        <a
          href="/"
          class="px-12 py-2.5 text-white rounded-lg bg-astral hover:bg-astral-600 transition-colors duration-100"
        >
          Go back
        </a>
      </div>
    </div>
  </div>
</Layout>
